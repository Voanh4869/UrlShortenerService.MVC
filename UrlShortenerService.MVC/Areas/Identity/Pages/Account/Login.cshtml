@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<style>
    /* Background */
    body {
        margin: 0;
        padding: 0;
        height: 100vh;
        background: linear-gradient(135deg, #007bff 0%, #6610f2 100%);
        font-family: 'Segoe UI', sans-serif;
        color: #fff;
        display: flex;
        flex-direction: column;
    }

 

    /*  Main login section */
    main {
        flex-grow: 1;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .login-card {
        background-color: #fff;
        color: #333;
        width: 100%;
        max-width: 400px;
        padding: 40px 35px;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    }

    .login-card h2 {
        text-align: center;
        font-size: 1.2rem;
        color: #6c757d;
        margin-bottom: 1.5rem;
    }

    .form-floating label {
        color: #6c757d;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        font-weight: 600;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    /*  Footer */
    footer {
        text-align: center;
        padding: 1rem;
        background: rgba(0, 0, 0, 0.15);
        color: #fff;
        font-size: 0.95rem;
        letter-spacing: 0.3px;
        font-weight: 500;
        border-top: 1px solid rgba(255, 255, 255, 0.2);
    }

        footer a {
            color: #ffe082;
            text-decoration: none;
        }

            footer a:hover {
                text-decoration: underline;
            }

    a {
        color: #007bff;
        text-decoration: none;
    }

    a:hover {
            text-decoration: underline;
      }
</style>



<main>
    <div class="login-card">
        <form id="account" method="post">
            <h2>Use your account to log in</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password" class="form-label">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                <label class="form-check-label" asp-for="Input.RememberMe">
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>

            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mb-3">Log in</button>

            <div class="text-center">
                <p><a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></p>
                <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a></p>
                <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a></p>
            </div>
        </form>
    </div>
</main>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
