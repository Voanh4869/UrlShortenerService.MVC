@model UrlShortenerService.MVC.ViewModels.QrCodeVM

@{
    ViewData["Title"] = "Shortened URL Result";
    Layout = "_Layout";
}

<div class="d-flex flex-column align-items-center justify-content-center py-5">
    <div class="shortener-card text-center">
        <h2 class="mb-4 text-primary fw-bold">Your Shortened URL</h2>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger">@Model.ErrorMessage</div>
        }
        else
        {
            <div class="mb-3">
                <a href="@Model.Url" class="fs-5 fw-semibold text-decoration-none" target="_blank">
                    @Model.Url
                </a>
            </div>

            <div class="mt-4">
                <img src="@Model.QrImageBase64"
                     alt="QR Code"
                     class="img-fluid rounded shadow-sm"
                     style="max-width: 250px;" />
            </div>

            <div class="mt-3">
                <a href="@Model.SavedFilePath"
                   class="btn btn-outline-primary"
                   download>
                    <i class="bi bi-download"></i> Download QR Code
                </a>
            </div>

            <div class="mt-4">
                <a asp-controller="UrlShortener" asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Shorten another URL
                </a>
            </div>
        }
    </div>
</div>

